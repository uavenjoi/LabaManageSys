@model LabaManageSys.WebUI.ViewModels.Account.LoginModel
@{
    ViewBag.Title = "Вход в систему";
}

<h2>Вход в систему</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(_ => _.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(_ => _.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(_ => _.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(_ => _.Password)
                @Html.ValidationMessageFor(_ => _.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Войти" class="btn btn-primary" />
                @Html.ActionLink("Регистрация", "Register", "Account", new { area = "" }, new { @class = "btn btn-default" })
            </div>
        </div>

    </div>
}